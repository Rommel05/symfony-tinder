{% extends 'base.html.twig' %}

{% block title %}Tinder{% endblock%}
{% block stylesheet%}
    <link rel="stylesheet" href="{{ asset('css/style-tinder.css') }}">
{% endblock %}

{% block body %}
    <div class="main-layout">
        <header class="header">
            <h1>Tinder</h1>
        </header>
        <div class="main-content">
            <div class="profile-content">
                <img src="{{ asset('images/image1.jpg') }}" alt="profile image" id="profile-image">
                <div class="profile-information">
                    <h2>Profile-name</h2>
                    <p>Sexo</p>
                    <p>Profile-description</p>
                </div>
                <div class="profile-buttons">
                    <button id="button-unlike">Unlike</button>
                    <button id="button-like">Like</button>
                </div>
                <br><br>
                <button id="button-profile">Profile</button>
            </div>
        </div>
    </div>

    {% block javascripts %}
        <script src="{{ asset('js/script.js') }}"></script>
    {% endblock %}
{% endblock %}
